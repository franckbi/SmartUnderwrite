meta {
  name: Evaluate Application
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/api/applications/{{testApplicationId}}/evaluate
  body: none
  auth: bearer
}

auth:bearer {
  token: {{underwriterToken}}
}

assert {
  res.status: eq 200
  res.body.outcome: isDefined
  res.body.score: isDefined
  res.body.reasons: isDefined
  res.body.decidedAt: isDefined
}

tests {
  test("Application evaluation returns decision", function() {
    expect(res.status).to.equal(200);
    expect(res.body.outcome).to.be.oneOf(["Approve", "Reject", "ManualReview"]);
    expect(res.body.score).to.be.a("number");
    expect(res.body.reasons).to.be.an("array");
    expect(res.body.decidedAt).to.be.a("string");
  });
}