meta {
  name: Get Applications
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/applications
  body: none
  auth: bearer
}

auth:bearer {
  token: {{affiliateToken}}
}

assert {
  res.status: eq 200
  res.body.items: isArray
  res.body.totalCount: isDefined
  res.body.pageNumber: isDefined
  res.body.pageSize: isDefined
}

tests {
  test("Get applications returns paginated results", function() {
    expect(res.status).to.equal(200);
    expect(res.body.items).to.be.an("array");
    expect(res.body.totalCount).to.be.a("number");
    expect(res.body.pageNumber).to.be.a("number");
    expect(res.body.pageSize).to.be.a("number");
    
    if (res.body.items.length > 0) {
      expect(res.body.items[0]).to.have.property("id");
      expect(res.body.items[0]).to.have.property("status");
      expect(res.body.items[0]).to.have.property("amount");
      expect(res.body.items[0]).to.have.property("applicant");
    }
  });
}