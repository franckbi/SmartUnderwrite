meta {
  name: Login Underwriter
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "underwriter@smartunderwrite.com",
    "password": "Underwriter123!"
  }
}

assert {
  res.status: eq 200
  res.body.token: isDefined
  res.body.refreshToken: isDefined
  res.body.user.email: eq underwriter@smartunderwrite.com
  res.body.user.roles: contains Underwriter
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("underwriterToken", res.body.token);
  }
}

tests {
  test("Underwriter login successful", function() {
    expect(res.status).to.equal(200);
    expect(res.body.token).to.be.a("string");
    expect(res.body.refreshToken).to.be.a("string");
    expect(res.body.user.email).to.equal("underwriter@smartunderwrite.com");
    expect(res.body.user.roles).to.include("Underwriter");
  });
}